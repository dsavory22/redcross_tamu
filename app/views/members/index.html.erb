<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Fall Dues</th>
      <th>Spring Dues</th>
      <th>Shirt Size</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.First_Name %></td>
        <td><%= member.Last_Name %></td>
        <td><%= member.Email %></td>

        <%if member.Fall_Dues == 1 %>
          <td>Paid</td>
        <%else%>
          <td>Unpaid</td>
        <%end%>

        <%if member.Spring_Dues == 1 %>
          <td>Paid</td>
        <%else%>
          <td>Unpaid</td>
        <%end%>

        <td><%= member.Shirt_Size %></td>
        <td><%= member.year %></td>
        <td><%= link_to 'Details', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a class="btn btn-primary" role="button" data-bs-toggle="button" <%= link_to 'New Member', new_member_path %></a>
