<% if flash[:notice] %>
  <div class="alert alert-success" role="alert" id="hideMeAfter5Seconds" style="position: fixed; top: 1rem; right: 1rem;">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert" id="hideMeAfter5Seconds" style="position: fixed; top: 1rem; right: 1rem;">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="d-sm-flex flex-wrap min-vh-100">
  <div class="d-flex flex-fill justify-content-center align-items-center left-login">
    <%= image_tag "login.png", class: "image-login" %>
  </div>
  <div class="d-flex flex-column flex-fill justify-content-center align-items-center right-login">
    <h1>Login</h1>
    <p class="text-secondary mb-4">Officers use your google account to sign in</p>
    <%= render "devise/shared/links" %>
  </div>
</div>