<p id="notice"><%= notice %></p>

<h1>Shifts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <th>Shift Title</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Maximum Volunteers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.Event_id %></td>
        <td>Shift Title</td>
        <td><%= shift.Start.strftime("%I:%M %p") %></td>
        <td><%= shift.End.strftime("%I:%M %p") %></td>
        <td><%= shift.Shift_Cap %></td>
        <td><%= link_to 'Details', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Delete', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a class="btn btn-primary" role="button" data-bs-toggle="button" <%= link_to 'New Shift', new_shift_path %></a>
