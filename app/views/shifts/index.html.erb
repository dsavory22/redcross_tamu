<p id="notice"><%= notice %></p>

<h1>Shifts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Shift Cap</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.Start %></td>
        <td><%= shift.End %></td>
        <td><%= shift.Shift_Cap %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a class="btn btn-primary" role="button" data-bs-toggle="button" <%= link_to 'New Shift', new_shift_path %></a>
